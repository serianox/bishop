ci: lint style build test cov-cli codecov

commit: lint style build test cov-cli cov-html

publish: build doc

codecov: test
	cmd = codecov -f coverage/*.json

cov-html: test
	cmd = nyc report --reporter=html

cov-cli: test
	cmd = nyc report

test: build
	cmd = nyc --reporter=json mocha --require source-map-support/register --ui tdd --use_strict --reporter mochawesome --timeout 5000 dist/test/**/*.test.js

build: transpile copy-bin

transpile:
	cmd = tsc

copy-bin:
	cmd = cp -rpu bin dist

fmt:
	cmd = tsfmt --replace

style:
	cmd = tsfmt --verify
	allow-failure

lint:
	tsconfig = tsconfig.json
	cmd = tslint -c tslint.json -p (tsconfig)
	allow-failure

doc:
	cmd = typedoc --mode modules --out dist/doc lib --json doc/doc.json --theme minimal
